<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:elevation="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMonAn"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/blank_profile_picture_png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="804dp"
        android:layout_height="224dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Họ tên"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Số điện thoại"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Ngày sinh"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Giới tính"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvNgaySinh3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Số lượng đặt"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnEditFood"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/btnDeleteFood"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:src="@drawable/ic_baseline_delete_24" />
    </LinearLayout>


</LinearLayout>