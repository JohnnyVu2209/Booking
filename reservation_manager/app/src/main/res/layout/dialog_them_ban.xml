<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:text="Thêm bàn"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#140E0E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNumber"
        android:hint="Số bàn (vd: 1)"
        android:textSize="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/tvPeople"
            android:text="Số người tối đa: "
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:hint="1"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại bàn:"
            android:textSize="20dp"
            android:fontFamily="@font/open_sans_semibold"/>

        <RadioButton
            android:id="@+id/rbtVip"
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:text="Bàn Vip"/>
        <RadioButton
            android:id="@+id/rbtNormal"
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_marginLeft="25dp"
            android:text="Bàn Thường"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị trí muốn thêm"
            android:textSize="20dp"
            android:fontFamily="@font/open_sans_semibold"/>

        <EditText
            android:id="@+id/etRow"
            android:hint="Vị trí hàng muốn thêm (hàng ngang)"
            android:textSize="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etColumn"
            android:hint="Vị trí cột muốn thêm (hàng dọc)"
            android:textSize="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_weight="50"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="10">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@drawable/custom_button_dialog"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button_dialog"
            android:text="Hủy" />

    </LinearLayout>


</LinearLayout>