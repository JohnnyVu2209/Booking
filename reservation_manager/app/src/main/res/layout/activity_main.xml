<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <ScrollView
        android:layout_width="881dp"
        android:layout_height="561dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="218dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/icon_table" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="45dp"
                        android:gravity="center"
                        android:text="Bàn 1"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="Số người tối đa: 2"
                        android:textSize="35sp" />


                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="278dp"
                        android:layout_marginLeft="800dp"
                        android:layout_marginTop="100dp"
                        android:layout_toEndOf="@+id/textView14"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/icon_delete" />

                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="65dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="461dp"
                        android:layout_marginLeft="800dp"
                        android:layout_marginTop="50dp"
                        android:layout_toEndOf="@+id/textView13"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/icon_edit" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="218dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_table" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:text="Bàn 2"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="Số người tối đa: 4"
                    android:textSize="35sp" />


                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_edit" />

                <ImageButton
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_delete" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="218dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_table" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:text="Bàn 3"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="Số người tối đa: 8"
                    android:textSize="35sp" />


                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="65dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_edit" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_delete" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="744dp"
        android:text="@string/th_m_b_n"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <ImageButton
        android:id="@+id/btnThem"
        android:layout_width="63dp"
        android:layout_height="66dp"
        android:layout_marginTop="52dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>