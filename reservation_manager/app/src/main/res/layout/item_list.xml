<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:elevation="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMonAn"
        android:layout_width="150dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_local_dining_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="804dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvLoaiMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại món ăn"
            android:textColor="#000000"
            android:textSize="25sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: "
            android:textColor="#000000"
            android:textSize="25sp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnEditFood"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_edit_24" />
        <ImageView
            android:id="@+id/btnDeleteFood"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_delete_24"/>
    </LinearLayout>


</LinearLayout>