<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#F2EDED"/>
            <stroke android:color="#EEA647" android:width="3dp"/>
            <corners android:radius="300dp"/>
            <padding android:bottom="10dp"
                        android:left="10dp"
                            android:right="10dp"
                                android:top="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#E61D1D"
                        android:endColor="#51AEDE"
                            android:angle="45"/>
            <stroke android:color="#181A1B" android:width="3dp"/>
            <corners android:radius="300dp"/>
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

</selector>